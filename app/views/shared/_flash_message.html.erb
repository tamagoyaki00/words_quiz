<div class="flash-message">
  <% flash.each do |message_type, message| %>
    <div class="
      px-4 py-3 rounded mb-4
      <% if message_type == 'notice' %>
        bg-blue-100 text-blue-800
      <% elsif message_type == 'alert' %>
        bg-red-100 text-red-800
      <% else %>
        bg-gray-100 text-gray-800
      <% end %>
    ">
      <%= message %>
    </div>
  <% end %>
</div>