<% if flash[:notice] %>
  <div class="flex justify-center mb-4">
    <div class="bg-blue-100 text-blue-800 px-6 py-3 rounded-xl shadow inline-block text-center">
      <%= flash[:notice] %>
    </div>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="flex justify-center mb-4">
    <div class="bg-red-100 text-red-800 px-6 py-3 rounded-xl shadow inline-block text-center">
      <%= flash[:alert] %>
    </div>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="flex justify-center mb-4">
    <div class="bg-gray-100 text-gray-800 px-6 py-3 rounded-xl shadow inline-block text-center">
      <%= flash[:error] %>
    </div>
  </div>
<% end %>
